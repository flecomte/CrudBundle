{% extends '@FLECrudBundle/Resources/views/Form/fields.html.twig' %}

{% block widget_form_group_start %}
    {% if form.children != null %}
        {% set widget_form_group = false %}
    {% endif %}
    {{ parent() }}
{% endblock widget_form_group_start %}

{% block widget_form_group_end %}
    {% if form.children != null %}
        {% set widget_form_group = false %}
    {% endif %}
    {{ parent() }}
{% endblock widget_form_group_end %}

{% block form_row %}
    {% set horizontal = false %}
    {{ parent() }}
{% endblock form_row %}

{% block form_widget_compound %}
    {% set render_fieldset = false %}
    {{ parent() }}
{% endblock form_widget_compound %}

{% block form_label %}
    {% if not compound %}
        {{ parent() }}
    {% endif %}
{% endblock form_label %}
